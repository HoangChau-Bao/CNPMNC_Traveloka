

    <div class="sidebar" style="padding-top: 150px; width: 10%;">
            <a href="/admin/vouchermanage">Quản lý Voucher</a>
            <a href="/admin/usermanage">Quản lý người dùng</a>
	</div>

    
	<div id="content" style="padding-top: 170px;">
        <h1 style="font-weight: bold; padding-left: 600px;">Quản lý người dùng</h1>
        <div class="mt-4 mb-5">


            <form action="/admin/usermanage/adduser" method="GET">
                <button class="btn btn-success">              
                    <span class="text-gradient"><i class="fa fa-user-plus"></i> Thêm người dùng</span>
                </button>
            </form>
            
           
            
            <table class="table table-striped table-bordered mydatatable">
            <thead>
                <tr>
                    <th>UserID</th>
                    <th>Tài khoản</th>
                    <th>Họ tên</th>
                    <th>Điểm hiện có</th>
                    <th>Điểm tổng</th>
                    <th>Số điện thoại</th>
                    <th>Địa chỉ</th>
                    <th>Chức vụ</th>
                    <th>Trạng thái</th>
                    <th>Bật/Tắt</th>
                    <th>Xóa</th>
                </tr>
            </thead>
            <tbody>
                {{#each user}}
                    
                        <tr>    
                            <form action="/admin/usermanage/changestatususer" method="POST">        
                                <input type="hidden" name="TaiKhoan" value="{{this.TaiKhoan}}">
                                <input type="hidden" name="Status" value="{{this.Status}}">
                                <td>{{this.NguoiDungID}}</td>
                                <td>{{this.TaiKhoan}}</td>
                                <td>{{this.HoTen}}</td>
                                <td>{{this.DiemHienTai}}</td>
                                <td>{{this.DiemTong}}</td>
                                <td>{{this.SoDienThoai}}</td>
                                <td>{{this.DiaChi}}</td>
                                <td>{{this.ChucVu}}</td>
                                <td>{{this.Status}}</td>
                                <td>                        
                                    <button class="btn btn-success"><i class="fa fa-toggle-on"></i></button>                         
                                </td> 
                                </form>   
                            <form action="/admin/usermanage/deletevoucher" method="POST">
                                <input type="hidden" name="TaiKhoan" value="{{this.TaiKhoan}}">
                                <input type="hidden" name="Status" value="{{this.Status}}">
                                <td>
                                    <button class="btn btn-danger"><i class="fa fa-trash"></i></button>
                                </td>  
                            </form>   
                                                                           
                        </tr>
                    
               {{/each}}
            </tbody>
            <tfoot>
                <tr>
                    <th>UserID</th>
                    <th>Tài khoản</th>
                    <th>Họ tên</th>
                    <th>Điểm hiện có</th>
                    <th>Điểm tổng</th>
                    <th>Số điện thoại</th>
                    <th>Địa chỉ</th>
                    <th>Chức vụ</th>
                    <th>Trạng thái</th>
                    <th>Bật/Tắt</th>
                    <th>Xóa</th>
                </tr>
                
            </tfoot>
        </table>
        </div>
        
    </div>

