

    <div class="sidebar" style="padding-top: 150px; width: 10%;">
            <a href="/admin/vouchermanage">Quản lý Voucher</a>
            <a href="/admin/usermanage">Quản lý người dùng</a>
	</div>

    
	<div id="content" style="padding-top: 170px;">
        <h1 style="font-weight: bold; padding-left: 600px;">Quản lý người dùng</h1>
        <div class="mt-4 mb-5">


            <form action="/admin/usermanage/adduser" method="GET">
                <button class="btn btn-success">              
                    <span class="text-gradient"><i class="fa fa-user-plus"></i> Thêm người dùng</span>
                </button>
            </form>
            
           
            
            <table class="table table-striped table-bordered mydatatable">
            <thead>
                <tr>
                    <th>UserID</th>
                    <th>Tài khoản</th>
                    <th>Họ tên</th>
                    <th>Điểm hiện có</th>
                    <th>Số điện thoại</th>
                    <th>Địa chỉ</th>
                    <th>Chức vụ</th>
                    <th>Xóa</th>
                </tr>
            </thead>
            <tbody>
                {{#each user}}
                
                        <tr>         
                            <td>{{this.userId}} </td>
                            <td>{{this.email}} </td>
                            <td>{{this.fristName}} {{this.lastName}}</td>
                            <td>{{this.value_TotalPoint}} </td>
                            <td>{{this.phone}} </td>
                            <td>{{this.userAddress}} </td>
                            <td>{{this.note}} </td>
                            <form action="/admin/usermanage/deleteuser" method="POST">
                                <input type="hidden" name="userId" value="{{this.userId}}">
                                <td>
                                    <button class="btn btn-danger"><i class="fa fa-trash"></i></button>
                                </td>  
                            </form>                                                                              
                        </tr>
                    
               {{/each}}
            </tbody>
            <tfoot>
                <tr>
                    <th>UserID</th>
                    <th>Tài khoản</th>
                    <th>Họ tên</th>
                    <th>Điểm hiện có</th>
                    <th>Số điện thoại</th>
                    <th>Địa chỉ</th>
                    <th>Chức vụ</th>
                    <th>Xóa</th>
                </tr>
                
            </tfoot>
        </table>
        </div>
        
    </div>

